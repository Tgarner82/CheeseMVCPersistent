@{ 
    ViewData["Title"] = "Index";
}



<h1>Menus</h1>
@if(Model.Count == 0)
{
    <p>No menus available.</p>
}


<table class="table">
    <ul>
        @foreach (var menu in Model)
        {
            <li>
                <a asp-controller="Menu"
                   asp-action="ViewMenu"
                   asp-route-id="@menu.ID">@menu.Name</a>
            </li>
        }
    </ul>
</table>

<p><a asp-controller="Menu" asp-action="Add">Add Menu</a></p>